{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["vinxi/types/client"],
		"isolatedModules": true,
		"paths": {
			"~/*": ["./src/*"],
			"@dynamix-layout/core": ["../core/src/index.ts"],
			"@dynamix-layout/solid": ["../solid/src/index.ts"]
		}
	}
}
