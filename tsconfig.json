{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist/types",
		"moduleResolution": "Node",
		"rootDir": "./src"
	},
	"include": [
	  "src/**/*",
	  "src/types/**/*"
	],
	"exclude": [
		"node_modules"
	]
}