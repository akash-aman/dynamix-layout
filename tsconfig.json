{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"moduleResolution": "Node",
		"jsx": "preserve",
		"composite": true,
		"noEmit": true
	},
	"include": ["packages/*/src/**/*", "examples/*/src/**/*"],
	"exclude": ["**/node_modules", "**/dist"],
	"references": [
		{
			"path": "./packages/core"
		},
		{
			"path": "./packages/react"
		}
	]
}
